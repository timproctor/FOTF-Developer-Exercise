<div>
  <h1>Sign In</h1>

  <div>
    <%= form_tag(session_path) do %>
      <div>
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, autofocus: true %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div>
        <%= submit_tag "Sign In", class: "button"%>
      </div>
    <% end %>
  </div>
</div>
